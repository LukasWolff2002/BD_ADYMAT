<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header text-black text-center py-3 rounded-top bg-gradient" style="background-color: #cfe2ff;">
          <h2 class="fw-bold mb-0">Detalles del Usuario</h2>
        </div>

        <div class="card-body p-4">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Nombre:</strong> <%= @user.nombre_completo %>
            </li>
            <li class="list-group-item">
              <strong>Email:</strong> <%= @user.email %>
            </li>
            <li class="list-group-item">
              <strong>RUT:</strong> <%= @user.rut %>
            </li>
            <li class="list-group-item">
              <strong>Cargo:</strong> <%= @user.cargo %>
              
            </li>
            
            <li class="list-group-item">
  <strong>Contraseña:</strong> 
  <span class="text-muted">No visible por seguridad</span>
</li>

<div class="d-grid gap-3 mt-4">
  <%= link_to "Restablecer Contraseña", edit_user_path(@user), class: "btn btn-lg shadow-sm w-100 text-black fw-bold", style: "background-color: #cfe2ff;" %>
</div>

          </ul>

          <div class="d-grid gap-3 mt-4">
            <%= link_to "Editar Usuario", edit_user_path(@user), class: "btn btn-lg shadow-sm w-100 text-black fw-bold", style: "background-color: #cfe2ff;" %>

            <%= link_to "Volver", users_path, class: "btn btn-outline-primary btn-lg shadow-sm w-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>