<div class="container mt-4">
  <h1 class="fw-bold text-primary mb-4">Detalle de Maquinaria</h1>

  <div class="mb-3">
    <p><strong>Nombre:</strong> <%= @machinery.nombre %></p>
    <p><strong>Formato:</strong> <%= @machinery.formato %></p>
    <p><strong>Horas por mantención:</strong> <%= @machinery.horas_por_mantencion %></p>
    <p><strong>Horas totales:</strong> <%= @machinery.horas_totales %></p>
    <p><strong>Horas disponibles:</strong> <%= @machinery.horas_disponibles %></p>
    <p><strong>Valor por día:</strong> <%= number_to_currency(@machinery.valor_dia, unit: "$") %></p>
    <p><strong>Valor por semana:</strong> <%= number_to_currency(@machinery.valor_semana, unit: "$") %></p>
    <p><strong>Valor por mes:</strong> <%= number_to_currency(@machinery.valor_mes, unit: "$") %></p>
  </div>

  <hr class="my-4">

  <h4 class="fw-bold mb-3">Código QR de acceso interno</h4>

  <% require 'rqrcode' %>
  <% qr = RQRCode::QRCode.new(machinery_qr_url(@machinery.qr_token)) %>

  <div class="border rounded p-3 d-inline-block bg-white shadow-sm">
    <%= raw qr.as_svg(module_size: 5, standalone: true) %>
  </div>

  <div class="mt-3">
    <%= link_to download_qr_machinery_path(@machinery), class: "btn btn-outline-dark me-2", target: "_blank" do %>
      <i class="bi bi-download"></i> Descargar QR
    <% end %>

    <%= link_to 'Volver', machineries_path, class: 'btn btn-secondary' %>
  </div>
</div>
