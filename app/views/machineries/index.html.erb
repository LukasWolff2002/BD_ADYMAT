<div class="container mt-4">
  <h1 class="fw-bold text-primary">Maquinarias</h1>

  <%= link_to 'Nueva Maquinaria', new_machinery_path, class: 'btn btn-primary mb-3' %>

  <% if @machineries.any? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Formato</th>
        
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @machineries.each do |machinery| %>
          <tr>
            <td><%= machinery.nombre %></td>
            <td><%= machinery.formato %></td>
            
            <td>
              <%= link_to 'Ver', machinery_path(machinery), class: 'btn btn-sm btn-outline-secondary me-2' %>
               <%= button_to 'Eliminar', machinery_path(machinery), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-warning text-center">No hay maquinarias registradas.</div>
  <% end %>
</div>
