<%= form_with(model: rental, local: true) do |form| %>
  <% if rental.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rental.errors.count, "error") %> prohibited this rental from being saved:</h2>
      <ul>
        <% rental.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :vehicle_id %>
    <%= form.collection_select :vehicle_id, Vehicle.all, :id, :name, prompt: "Select a vehicle" %>
  </div>

  <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.label :payment_method %>
    <%= form.text_field :payment_method %>
  </div>

  <div>
    <%= form.label :payment_status %>
    <%= form.text_field :payment_status %>
  </div>

  <div>
    <%= form.label :discount %>
    <%= form.number_field :discount, step: 0.01 %>
  </div>

  <div>
    <%= form.label :freight %>
    <%= form.number_field :freight, step: 0.01 %>
  </div>

  <div>
    <%= form.label :total_amount %>
    <%= form.number_field :total_amount, step: 0.01 %>
  </div>

  <div>
    <%= form.label :observations %>
    <%= form.text_area :observations %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
